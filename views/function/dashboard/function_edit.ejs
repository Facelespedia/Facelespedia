<script>

    var getplayerID = "",getteamID="";

    $('#player-edit').click(function(){
        $('#form-edit-player').slideToggle(250);
        $("#form-edit-player #search-input-team").val("");
        $('#form-edit-team').hide();
        searchPlayer($('#form-edit-player #select-1').val());
    });
     $('#team-edit').click(function(){
        $('#form-edit-team').slideToggle(250);
        $("#form-edit-player #search-input-player").val("");
        $('#form-edit-player').hide();
        searchTeam($('#form-edit-team #select-1').val());
    });
    $('#form-edit-player #select-1').change(function(){
        $("#form-edit-player #search-input-player").val("");
        $('#form-edit-player #menu-edit').hide();
        searchPlayer($('#form-edit-player #select-1').val());
    });
    $('#form-edit-team #select-1').change(function(){
        $("#form-edit-team #search-input-team").val("");
        $('#form-edit-team #menu-edit').hide();
        searchTeam($('#form-edit-team #select-1').val());
    });

    function searchPlayer(value) {
        var url = 'http://localhost:3000/database/getPlayer';
        var options = {
            url: url,
            listLocation: 'Player',
            getValue: value,
            list: {
                maxNumberOfElements: 10,
                match: {
                    enabled: true
                }
            },
            theme: "dark"
        };
        $('#form-edit-player #search-input-player').easyAutocomplete(options);
        $('#form-edit-player #search-input-player').attr("placeholder", "Search " + value);
    }
    function searchTeam(value) {
        var url = 'http://localhost:3000/database/getTeam';
        var options = {
            url: url,
            listLocation: 'Team',
            getValue: value,
            list: {
                maxNumberOfElements: 10,
                match: {
                    enabled: true
                }
            },
            theme: "dark"
        };
        $('#form-edit-team #search-input-team').easyAutocomplete(options);
        $('#form-edit-team #search-input-team').attr("placeholder", "Search " + value);
    }

     $('#form-edit-player #search-button').click(function(){

         for(var i = 0 ; i < getPlayer.Player.length ; i++ ){
            if(getPlayer.Player[i].GameName == $('#form-edit-player #search-input-player').val()){
