<script>
    $("#select-team").click(function(){
        resetText();
        $("#search-form-team").show();
        $("#search-form-player").hide();
        var options = {
            url: 'http://localhost:3000/database/getTeam',
            listLocation: "Team",
            getValue: "TeamsubName",
            list: {
                maxNumberOfElements: 10,
                match: {
                    enabled: true
                }
            },
            theme: "dark"
        };
        $("#search-input-team").easyAutocomplete(options);
        $('#search-form-team button').click(function(){
                var teamID=-1;
                for(var i=0; i<getTeam.Team.length; i++) {
                    if(getTeam.Team[i].TeamsubName == $("#search-input-team").val()) {
                        teamID = getTeam.Team[i].TeamID;
                        break;
                    }
                }
                if(teamID != -1) {
                    window.location.href = ("#team-rank");
                    SelectTableTeam(teamID);
                    resetText();
                }else {
                    window.alert('ERROR');
                    window.location.href = ("#myPage");
                }     
        });
    });
    $("#select-player").click(function(){
        resetText();
        $("#search-form-player").show();
        $("#search-form-team").hide();
        var options = {
            url: 'http://localhost:3000/database/getPlayer',
            listLocation: "Player",
            getValue: "GameName",
            list: {
                maxNumberOfElements: 10,
                match: {
                    enabled: true
                }
            },
            theme: "dark"
        };
        $("#search-input-player").easyAutocomplete(options);
        $('#search-form-player button').click(function(){
                var playerID=-1;
                for(var i=0; i<getPlayer.Player.length; i++) {
                    if(getPlayer.Player[i].GameName == $("#search-input-player").val()) {
                        playerID = getPlayer.Player[i].PlayerID;
                        break;
                    }
                }
                if(playerID != -1) {
                    window.location.href = ("#player-rank");
                    SelectTablePlayer(playerID);
                    resetText();
                }else {
                    window.alert('ERROR');
                    window.location.href = ("#myPage");
                }
        });
    });


    $("#select-team").click();

    function resetText(){
        $("#search-input-team").val('');
        $("#search-input-player").val('');
    }

</script>